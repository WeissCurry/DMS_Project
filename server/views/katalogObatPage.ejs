<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Katalog Obat Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
</head>
<body class="bg-success-subtle">

    <nav class="navbar navbar-expand-lg navbar-light bg-success">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="/home">OBAT</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/home/pasien/view">Data Pasien</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/cart">Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white-50" href="/home/katalog/formObat">Input Obat</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/login">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h2>Data Display</h2>

        <div class="row mt-4">
            <!-- Dynamic data block -->
            <% allDatas.forEach(item => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= item.Gambar %>" class="card-img-top" alt="">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.Nama %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">ID: <%= item.id %></h6>
                            <p class="card-text">Harga: Rp. <%= item.Harga %></p>
                            <p class="card-text">Stock: <%= item.Stock %></p>
                            <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= item.id %>" aria-expanded="false" aria-controls="collapse<%= item.id %>">
                                Read More
                            </button>
                            <div class="collapse mt-3" id="collapse<%= item.id %>">
                                <p class="card-text">Komposisi: <%= item.Komposisi %></p>
                                <p class="card-text">Dosis: <%= item.Dosis %></p>
                                <p class="card-text">Aturan Pakai: <%= item.Aturan_Pakai %></p>
                                <p class="card-text">Jenis Obat: <%= item.Jenis_Obat %></p>
                            </div>
                            <div class="d-flex mt-3">
                                <form action="/home/katalog/<%= item.id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                                </form>
                                <form action="/home/katalog/<%= item.id %>?_method=PUT" method="POST">
                                    <div class="d-flex">
                                        <input type="number" class="form-control" placeholder="Stock Obat Menjadi ..." id="Stock" name="Stock" style="font-size: small;">
                                        <button type="submit" class="btn btn-info">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
</body>
</html>
